<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.rgpike.latitudeshortcuts"
      android:versionCode="4"
      android:versionName="0.5.3">

      <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="14" />

    <application android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        >

        <activity android:name=".LatitudeShortcuts"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ShortcutsActivity" />
        <activity android:name=".LaunchersActivity" />

		<activity android:name=".WidgetCheckin"
			android:label="@string/widget_checkin"
        	android:icon="@drawable/ic_checkin" >
			>
			<intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".WidgetList"
			android:label="@string/widget_list"
        	android:icon="@drawable/ic_list" >
			>
			<intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".WidgetHistory"
			android:label="@string/widget_history"
        	android:icon="@drawable/ic_history" >
			>
			<intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".WidgetPlaces"
			android:label="@string/widget_places"
        	android:icon="@drawable/ic_places" >
			>
			<intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

    </application>
</manifest> 
